          "id": "presentation.multiplication.stampGame",
          "title": "Stamp Game Multiplication Stories",
          "summary": "Show 225 × 5 on the stamp game with exchanges.",
          "actions": [
            {
              "id": "presentation.multiplication.stampGame-1",
              "type": "narrate",
              "text": "Let us multiply 225 by 5 using the stamp game."
            },
            {
              "id": "presentation.multiplication.stampGame-2",
              "type": "showCard",
              "card": "225",
              "position": "paper"
            },
            {
              "id": "presentation.multiplication.stampGame-3",
              "type": "showCard",
              "card": "5",
              "position": "multiplier"
            },
            {
              "id": "presentation.multiplication.stampGame-4",
              "type": "narrate",
              "text": "Build one column with 2 red hundreds, 2 blue tens, and 5 green units."
            },
            {
              "id": "presentation.multiplication.stampGame-5",
              "type": "showStamp",
              "stamp": "100",
              "columns": 1,
              "rows": 2
            },
            {
              "id": "presentation.multiplication.stampGame-6",
              "type": "showStamp",
              "stamp": "10",
              "columns": 1,
              "rows": 2
            },
            {
              "id": "presentation.multiplication.stampGame-7",
              "type": "showStamp",
              "stamp": "1",
              "columns": 1,
              "rows": 5
            },
            {
              "id": "presentation.multiplication.stampGame-8",
              "type": "narrate",
              "text": "Repeat this column 5 times for the multiplier."
            },
            {
              "id": "presentation.multiplication.stampGame-9",
              "type": "duplicateTray",
              "count": 5
            },
            {
              "id": "presentation.multiplication.stampGame-10",
              "type": "narrate",
              "text": "Gather the tiles and make exchanges: ten greens become a blue, ten blues become a red."
            },
            {
              "id": "presentation.multiplication.stampGame-11",
              "type": "exchange",
              "from": "unit",
              "to": "ten",
              "quantity": 10,
              "remainder": 5
            },
            {
              "id": "presentation.multiplication.stampGame-12",
              "type": "exchange",
              "from": "ten",
              "to": "hundred",
              "quantity": 10,
              "remainder": 2
            },
            {
              "id": "presentation.multiplication.stampGame-13",
              "type": "countTotal",
              "value": "1,125"
            },
            {
              "id": "presentation.multiplication.stampGame-14",
              "type": "narrate",
              "text": "225 times 5 equals 1,125."
            }
          ]
        },
        "scenario": {
          "kind": "stamp-game",
