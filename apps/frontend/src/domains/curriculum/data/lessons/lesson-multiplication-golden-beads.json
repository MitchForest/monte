        "script": {
          "id": "presentation.multiplication.goldenBeads",
          "title": "Golden Bead Staircase Multiplication",
          "summary": "Demonstrate 2,466 × 3 using golden beads, exchanges, and final stacking.",
          "actions": [
            {
              "id": "presentation.multiplication.goldenBeads-1",
              "type": "showCard",
              "card": "2,466 × 3",
              "position": "paper"
            },
            {
              "id": "presentation.multiplication.goldenBeads-2",
              "type": "narrate",
              "text": "We will multiply 2,466 by 3 using golden beads."
            },
            {
              "id": "presentation.multiplication.goldenBeads-3",
              "type": "showCard",
              "card": "2000",
              "position": "multiplicand-stack"
            },
            {
              "id": "presentation.multiplication.goldenBeads-4",
              "type": "showCard",
              "card": "400",
              "position": "multiplicand-stack"
            },
            {
              "id": "presentation.multiplication.goldenBeads-5",
              "type": "showCard",
              "card": "60",
              "position": "multiplicand-stack"
            },
            {
              "id": "presentation.multiplication.goldenBeads-6",
              "type": "showCard",
              "card": "6",
              "position": "multiplicand-stack"
            },
            {
              "id": "presentation.multiplication.goldenBeads-7",
              "type": "narrate",
              "text": "Stack the thousand, hundred, ten, and unit cards to show 2,466."
            },
            {
              "id": "presentation.multiplication.goldenBeads-8",
              "type": "showCard",
              "card": "3",
              "position": "multiplier"
            },
            {
              "id": "presentation.multiplication.goldenBeads-9",
              "type": "showCard",
              "card": "×",
              "position": "paper"
            },
            {
              "id": "presentation.multiplication.goldenBeads-10",
              "type": "narrate",
              "text": "Lay out the golden beads to match each place value."
            },
            {
              "id": "presentation.multiplication.goldenBeads-11",
              "type": "placeBeads",
              "place": "thousand",
              "quantity": 2,
              "tray": 1
            },
            {
              "id": "presentation.multiplication.goldenBeads-12",
              "type": "placeBeads",
              "place": "hundred",
              "quantity": 4,
              "tray": 1
            },
            {
              "id": "presentation.multiplication.goldenBeads-13",
              "type": "placeBeads",
              "place": "ten",
              "quantity": 6,
              "tray": 1
            },
            {
              "id": "presentation.multiplication.goldenBeads-14",
              "type": "placeBeads",
              "place": "unit",
              "quantity": 6,
              "tray": 1
            },
            {
              "id": "presentation.multiplication.goldenBeads-15",
              "type": "narrate",
              "text": "Repeat the layout a second time."
            },
            {
              "id": "presentation.multiplication.goldenBeads-16",
              "type": "duplicateTray",
              "count": 2
            },
            {
              "id": "presentation.multiplication.goldenBeads-17",
              "type": "narrate",
              "text": "Repeat the layout a third time."
            },
            {
              "id": "presentation.multiplication.goldenBeads-18",
              "type": "duplicateTray",
              "count": 3
            },
            {
              "id": "presentation.multiplication.goldenBeads-19",
              "type": "narrate",
              "text": "Lay a yellow ribbon beneath to signal multiplication."
            },
            {
              "id": "presentation.multiplication.goldenBeads-20",
              "type": "highlight",
              "target": "multiplication-ribbon",
              "text": "Place ribbon"
            },
            {
              "id": "presentation.multiplication.goldenBeads-21",
              "type": "narrate",
              "text": "Gather all single unit beads to add them together and exchange groups of ten."
            },
            {
              "id": "presentation.multiplication.goldenBeads-22",
              "type": "exchange",
              "from": "unit",
              "to": "ten",
              "quantity": 10,
              "remainder": 8
            },
            {
              "id": "presentation.multiplication.goldenBeads-23",
              "type": "writeResult",
              "value": "8 units remain and 1 ten is carried."
            },
            {
              "id": "presentation.multiplication.goldenBeads-24",
              "type": "showCard",
              "card": "8",
              "position": "paper"
            },
            {
              "id": "presentation.multiplication.goldenBeads-25",
              "type": "narrate",
              "text": "Gather the tens and exchange groups of ten tens for hundreds."
            },
            {
              "id": "presentation.multiplication.goldenBeads-26",
              "type": "exchange",
              "from": "ten",
              "to": "hundred",
              "quantity": 10,
              "remainder": 9
            },
            {
              "id": "presentation.multiplication.goldenBeads-27",
              "type": "writeResult",
              "value": "9 tens remain and 1 hundred is carried."
            },
            {
              "id": "presentation.multiplication.goldenBeads-28",
              "type": "narrate",
              "text": "Gather the hundreds and exchange ten hundreds for thousands."
            },
            {
              "id": "presentation.multiplication.goldenBeads-29",
              "type": "exchange",
              "from": "hundred",
              "to": "thousand",
              "quantity": 10,
              "remainder": 3
            },
            {
              "id": "presentation.multiplication.goldenBeads-30",
              "type": "writeResult",
              "value": "3 hundreds remain and 1 thousand is carried."
            },
            {
              "id": "presentation.multiplication.goldenBeads-31",
              "type": "narrate",
              "text": "Stack each place value to read the product."
            },
            {
              "id": "presentation.multiplication.goldenBeads-32",
              "type": "stackPlaceValues",
              "order": [
                "thousand",
                "hundred",
                "ten",
                "unit"
              ]
            },
            {
              "id": "presentation.multiplication.goldenBeads-33",
              "type": "writeResult",
              "value": "7,398"
            },
            {
              "id": "presentation.multiplication.goldenBeads-34",
              "type": "narrate",
              "text": "2,466 multiplied by 3 equals 7,398."
            }
          ]
        },
        "scenario": {
          "kind": "golden-beads",
          "seed": 240317
