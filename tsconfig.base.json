{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@monte/backend/*": ["apps/backend/*"],
      "@monte/types": ["packages/types/dist/index.d.ts"],
      "@monte/api/*": ["packages/api/*"],
      "@monte/types/*": ["packages/types/*"],
      "@monte/curriculum-service": ["packages/curriculum-service/src/index.ts"],
      "@monte/curriculum-service/*": ["packages/curriculum-service/*"],
      "@monte/question-service/*": ["packages/question-service/*"],
      "@monte/graph-service/*": ["packages/graph-service/*"],
      "@monte/engine-service/*": ["packages/engine-service/*"]
    }
  }
}
